<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_metas_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/quideline_metas_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="5dp" />



    <View
        android:id="@+id/vbp_emergencia"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toEndOf="@id/guideline_metas_begin"
        app:layout_constraintEnd_toStartOf="@id/quideline_metas_end"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_rounded"
        />






</androidx.constraintlayout.widget.ConstraintLayout>